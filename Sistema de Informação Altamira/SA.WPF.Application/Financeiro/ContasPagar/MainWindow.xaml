<RibbonWindow x:Class="SA.WPF.Application.Financeiro.ContasPagar.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Ribbon x:Name="RibbonMain" >

            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu Visibility="Collapsed" />
            </Ribbon.ApplicationMenu>

            <RibbonTab Header="Incluir">
                <RibbonGroup Header="Pagamentos">

                    <RibbonButton 
                                         LargeImageSource="..\..\Images\barcode_checkmark.png"
                                         Label="Título de Cobrança"
                                         Click="IncluirBoletoRibbonButton_Click" />

                </RibbonGroup>

            </RibbonTab>

        </Ribbon>

    </Grid>
</RibbonWindow>
